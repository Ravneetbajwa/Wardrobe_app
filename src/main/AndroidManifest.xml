<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macstudent.styleme">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.wifi" />
    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Season"></activity>
        <activity android:name=".ListColor" />
        <activity android:name=".Info" />
        <activity android:name=".Browse" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPage"
            android:label="@string/title_activity_main_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TakePicture"
            android:label="@string/title_activity_take_picture"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Dress"
            android:label="@string/title_activity_dress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Generate_Outfit"
            android:label="@string/title_activity_generate__outfit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OutfitGallery"
            android:label="@string/title_activity_outfit_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DressesCollection"
            android:label="@string/title_activity_dresses_collection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Outfit_Collection"
            android:label="@string/title_activity_outfit__collection"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>